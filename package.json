{
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build:mainnet": "dotenv -e .env.local tsdx build",
    "build:testnet": "dotenv -e .env.local.testnet tsdx build",
    "prepare:mainnet": "yarn build:mainnet",
    "prepare:testnet": "yarn build:testnet",
    "publish:mainnet": "yarn prepare:mainnet && yarn publish --tag mainnet",
    "publish:testnet": "yarn prepare:testnet && yarn publish --tag testnet",
    "lint": "tsdx lint",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "@toncodex/sdk",
  "author": "toncodex",
  "module": "dist/sdk.esm.js",
  "dependencies": {
    "@ton/core": "^0.59.0",
    "@ton/crypto": "^3.3.0",
    "@ton/ton": "^15.1.0",
    "big.js": "^6.2.1",
    "crc": "^4.3.2",
    "decimal.js-light": "^2.5.1",
    "jsbi": "^3.2.5",
    "numeral": "^2.0.6",
    "tiny-invariant": "^1.3.1",
    "tiny-warning": "^1.0.3",
    "toformat": "^2.0.0",
    "tonapi-sdk-js": "^1.0.11"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^9.0.0",
    "@types/node": "^22.10.10",
    "dotenv-cli": "^8.0.0",
    "husky": "^8.0.3",
    "rollup-plugin-dotenv": "^0.5.1",
    "size-limit": "^9.0.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2"
  },
  "version": "1.0.39-mainnet"
}
